<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
	<LinearLayout
	      android:orientation="horizontal"
	      android:layout_height="wrap_content"
	      android:layout_weight="1"
	      android:layout_width="wrap_content"
	      android:layout_gravity="center_vertical|center_horizontal"
	      android:layout_marginTop="20sp">
	<Button
	        android:id="@+id/downbutton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:background="@drawable/back_button"
	        android:layout_gravity="center_vertical|center_horizontal"/>
	<EditText
	        android:id="@+id/edittext"
	        android:layout_height="wrap_content"
	        android:inputType="number"
	        android:layout_width="90sp"
	        android:layout_gravity="center_vertical|center_horizontal"/>
	<Button
	        android:id="@+id/upbutton"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:background="@drawable/forward_button"
	        android:layout_gravity="center_vertical|center_horizontal"/>
	</LinearLayout>
<TableLayout android:id="@+id/TableLayout01" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal">
	<TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content">
	<TextView
        android:id="@+id/shrovelabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shrove_tuesday"
        android:layout_marginTop="20sp" android:layout_marginRight="10sp"
        android:gravity="center_vertical|right"/>
	<TextView
        android:id="@+id/shrovevalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(date of Shrove Tuesday)"
        android:layout_marginTop="20sp"
        android:gravity="left" />
	</TableRow>
	<TableRow android:id="@+id/TableRow01" android:layout_width="wrap_content" android:layout_height="wrap_content">
	<TextView
        android:id="@+id/easterlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/easter"
        android:layout_marginTop="20sp" android:layout_marginRight="10sp"
        android:gravity="center_vertical|right"/>
	<TextView
        android:id="@+id/eastervalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(date of Easter)"
        android:layout_marginTop="20sp"
        android:gravity="left" />
	</TableRow>
</TableLayout>

</LinearLayout>
